#!/bin/sh
SHORT_LANG="$(echo $LANG | awk -F_ '{print $1}')"

case "${SHORT_LANG}" in
	de)
		firefox "https://phet.colorado.edu/de/simulations/browse?type=html"
		;;
	es)
		firefox https://phet.colorado.edu/es/simulations/browse
		;;
	fr)
		firefox https://phet.colorado.edu/fr/simulations/browse
		;;
	it)
		firefox https://phet.colorado.edu/it/simulations/browse
		;;
	pt)
		firefox https://phet.colorado.edu/pt/simulations/browse
		;;
	pt_BR)
		firefox https://phet.colorado.edu/pt_BR/simulations/browse
		;;
	*)
		firefox https://phet.colorado.edu/en/simulations/browse
		;;
esac
