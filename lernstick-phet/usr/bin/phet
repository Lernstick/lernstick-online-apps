#!/bin/sh
SHORT_LANG="$(echo $LANG | awk -F_ '{print $1}')"

case "${SHORT_LANG}" in
	de)
		firefox http://phet.colorado.edu/de/simulations/category/new
		;;
	es)
		firefox http://phet.colorado.edu/es/simulations/category/new
		;;
	fr)
		firefox http://phet.colorado.edu/fr/simulations/category/new
		;;
	it)
		firefox http://phet.colorado.edu/it/simulations/category/new
		;;
	pt)
		firefox http://phet.colorado.edu/pt/simulations/category/new
		;;
	pt_BR)
		firefox http://phet.colorado.edu/pt_BR/simulations/category/new
		;;
	*)
		firefox http://phet.colorado.edu/en/simulations/category/new
		;;
esac
