#!/bin/sh
SHORT_LANG="$(echo $LANG | awk -F_ '{print $1}')"

case "${SHORT_LANG}" in
	de)
		firefox http://www.lastexitflucht.org/againstallodds/
		;;
	es)
		firefox http://www.contravientoymarea.org/
		;;
	fr)
		firefox http://www.enversetcontretout.org/
		;;
	*)
		firefox http://www.playagainstallodds.com
		;;
esac
